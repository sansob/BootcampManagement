@{
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}
<head>

</head>
<body>
    <div class="container-fluid">
        <hr />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="return ClearScreen();">Create New</button><br /><br />
        <table class="table table-hover" id="table">
            <thead>
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        Batch
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Batch Form</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Id">Id</label>
                            <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <label for="StartDate">Start Date</label>
                            <input type="text" id="startdate" class="form-control" onchange="getEndDate();" placeholder="Start Date">
                        </div>
                        <div class="form-group">
                            <label for="EndDate">End Date</label>
                            <input type="text" id="enddate" class="form-control" placeholder="End Date">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Save" onclick="Save();">Add</button>
                    <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/Content/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/assets/plugins/jqueryui/jquery-ui.js"></script>
    <link href="~/Content/assets/plugins/jqueryui/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.js"></script>
    <link href="~/Content/assets/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/BatchMaster/RetrievingBatch.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}